void setup() {
  // put your setup code here, to run once:
  for(i=0; i<8; i++){
    pinMode(pin[i], OUTPUT);
  }
}

void loop() {
  // put your main code here, to run repeatedly:
  for (i=0; i<=7; i++){
    digitalWrite(pin[i], HIGH);
    delay(50);
    digitalWrite(pin[i], LOW);
  }
  for (i=7; i>=0; i--){
    digitalWrite(pin[i], HIGH);
    delay(50);
    digitalWrite(pin[i], LOW);
  }
}
